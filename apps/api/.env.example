# Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Auth (seu user id do Supabase Auth)
OWNER_ID=seu-uuid-aqui

# Modo de desenvolvimento (NUNCA true em produção!)
# Se true: bypassa validação de JWT e usa OWNER_ID direto
# Se false: requer token JWT válido em todas as requests
DEV_MODE=false

# Criptografia (gerar com: openssl rand -base64 32)
ENCRYPTION_KEY=base64-encoded-32-bytes

# Telegram (obter em https://my.telegram.org)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abc123...

# Gemini (obter em https://aistudio.google.com)
GEMINI_API_KEY=AIza...
GEMINI_FLASH_MODEL=gemini-3-flash-preview
GEMINI_PRO_MODEL=gemini-3-pro-preview

# OpenPhone (obter no painel OpenPhone)
# Secret para validar assinaturas de webhooks
OPENPHONE_WEBHOOK_SECRET=seu-webhook-secret-aqui

# CORS (URL do frontend em producao)
FRONTEND_URL=https://seuapp.vercel.app
